<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<p>Welcome </p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <% if signed_in? %>
      <th>User</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.text %></td>
        <td>
        <% if !current_user%>
        <%=  %>
        <% else %>
        <%= post.user.username %>
        <% end %>
        </td>
        <td><%= link_to 'Show', posts_path %></td>
        
        <% if current_user && current_user.admin%>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<% if current_user%>
<%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% else %>
<%= link_to 'Sign Up', new_user_registration_path %>
<%= link_to 'Sign in', new_user_session_path %>
<% end %>
