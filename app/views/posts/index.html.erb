<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<p>
Welcome
<%= current_user.username %>
</p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <% if signed_in? %>
      <th>User</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.text %></td>
        <td>
        <% if !current_user%>
        <%=  %>
        <% else %>
        <%= post.user.username %>
        <% end %>
        </td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
